<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Probe">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/toolbarColor">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/probe_show_text"
        android:layout_width="250dp"
        android:layout_height="71dp"
        android:fadeScrollbars="false"
        android:scrollbars = "vertical"
        android:text="ovde ce se prikazati" />

        <Button
            android:id="@+id/probe_btn_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show latitudes" />
    </LinearLayout>
    <TextView
        android:id="@+id/probe_lat_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Latitude:" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/probe_lat_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:inputType="textPersonName"
        android:text="123" />

    <TextView
        android:id="@+id/probe_long_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Longitude:" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/probe_long_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:inputType="textPersonName"
        android:text="123" />

    <TextView
        android:id="@+id/probe_desc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Desc:" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/probe_desc_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:inputType="textPersonName"
        android:text="proba123" />

    <Button
        android:id="@+id/probe_add_longlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="1dp"
        android:text="add long/lat" />



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/probe_index_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:inputType="textPersonName"
        android:text="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/probe_btn_deleteIndex"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="delete index" />

        <Button
            android:id="@+id/probe_btn_updateIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/common_google_play_services_update_button" />

        <Button
            android:id="@+id/probe_btn_getIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get 1" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/proba_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_toolbar"
            android:layout_marginTop="5dp"
            android:text="Signup activity" />
        <Button
            android:id="@+id/proba_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_toolbar"
            android:layout_marginTop="5dp"
            android:text="Login Activity" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/probe_btn_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_toolbar"
            android:layout_marginTop="5dp"
            android:text="start service" />

        <Button
            android:id="@+id/probe_btn_stop_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_toolbar"
            android:layout_marginTop="5dp"
            android:text="stop service" />
    </LinearLayout>

    <Button
        android:id="@+id/probe_btn_main"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Main" />
    <Button
        android:id="@+id/probe_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friends" />


</LinearLayout>