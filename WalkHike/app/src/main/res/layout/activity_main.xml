<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/toolbarColor">

    </androidx.appcompat.widget.Toolbar>

    <fragment
        android:id="@+id/main_map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_menu"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/info_window_container"
        android:orientation="horizontal"
        android:weightSum="100"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/bottom_navigation_menu">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_heart"
            android:id="@+id/info_window_icon"
            android:layout_weight="50"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="50">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Left on dd/MM/yyyy by\nusername"
                android:id="@+id/info_window_username"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lat: latitude"
                android:id="@+id/info_window_lat"
                android:gravity="start"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lon: longitude"
                android:id="@+id/info_window_lon"
                android:gravity="start"
                android:layout_marginStart="20dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/info_add_to_savedroutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Save"
                    android:textSize="12sp"></Button>
                <TextView
                    android:id="@+id/info_window_see_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:gravity="end"
                    android:text="see details" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/info_window_container_groups"
        android:orientation="vertical"
        android:weightSum="100"
        android:visibility="visible"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/info_window_container"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_window_text"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Groups"
                android:textSize="20dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/main_info_addgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_add_object"
                app:backgroundTint="@color/colorPrimary"
                android:scrollbars="vertical"
                app:fabSize="mini"></com.google.android.material.floatingactionbutton.FloatingActionButton>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_info_listview_grupe"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/navigation_menu"
        android:layout_alignParentBottom="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_showArObject"
        android:layout_above="@+id/main_addnewObject"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_trophy"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_addnewObject"
        android:layout_above="@+id/info_window_container_groups"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_object"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_map_fragment"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="45dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_notifications"
        app:backgroundTint="#009688"
        app:fabSize="mini" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/filter_icon"
        android:src="@drawable/ic_filter"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_filter"
        android:layout_below="@id/filter_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:visibility="gone"
        android:background="@color/colorAccent">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/filter_object_type"
                android:src="@drawable/ic_star"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/filter_timespan"
                android:src="@drawable/ic_clock"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/filter_object_type"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_filter_object_type"
        android:layout_below="@id/filter_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:visibility="gone">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_checkpoint"
            android:src="@drawable/ic_marker"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_emoji"
            android:src="@drawable/ic_heart"
            android:clickable="true"
            android:focusable="true"
            android:layout_toEndOf="@id/filter_checkpoint"
            android:layout_marginEnd="15dp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_photo"
            android:src="@drawable/ic_photo"
            android:clickable="true"
            android:focusable="true"
            android:layout_toEndOf="@id/filter_emoji"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_message"
            android:src="@drawable/ic_message"
            android:clickable="true"
            android:focusable="true"
            android:layout_toEndOf="@id/filter_photo"
            android:layout_marginEnd="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_filter_timespan"
        android:layout_below="@id/filter_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="66dp"
        android:background="@color/colorAccent"
        android:visibility="gone">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_today"
            android:src="@drawable/ic_clock"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="today"
            android:layout_below="@+id/filter_today"
            android:id="@+id/filter_today_text"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_one_week"
            android:src="@drawable/ic_clock"
            android:clickable="true"
            android:focusable="true"
            android:layout_toEndOf="@id/filter_today"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1w"
            android:id="@+id/filter_one_week_text"
            android:layout_below="@+id/filter_one_week"
            android:layout_toEndOf="@+id/filter_today_text"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_one_month"
            android:src="@drawable/ic_clock"
            android:clickable="true"
            android:focusable="true"
            android:layout_toEndOf="@id/filter_one_week"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1m"
            android:layout_below="@+id/filter_one_month"
            android:layout_toEndOf="@+id/filter_one_week_text"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <include
        android:id="@+id/search_fragment"
        layout="@layout/fragment_main_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />


</RelativeLayout>