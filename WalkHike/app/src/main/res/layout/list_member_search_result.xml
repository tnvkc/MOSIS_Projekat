<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/search_result_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_photo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/search_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="lalala"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/search_result_icon"
        android:layout_toStartOf="@+id/search_result_btn"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/search_result_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="distance: 0m"
        android:textSize="10dp"
        android:layout_toStartOf="@+id/search_result_btn"
        android:layout_below="@+id/search_result_text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/search_result_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="GO"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>